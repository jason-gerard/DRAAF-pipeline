	urldate = {2023-07-04},
	journal = {Acta Astronautica},
	author = {del Portillo, Inigo and Cameron, Bruce G. and Crawley, Edward F.},
	month = jun,
	year = {2019},
	pages = {123--135},
	file = {ScienceDirect Full Text PDF:/home/jason/snap/zotero-snap/common/Zotero/storage/3CBJ6IVI/del Portillo et al. - 2019 - A technical comparison of three low earth orbit sa.pdf:application/pdf;ScienceDirect Snapshot:/home/jason/snap/zotero-snap/common/Zotero/storage/BAPVPTYB/S0094576518320368.html:text/html},
}

